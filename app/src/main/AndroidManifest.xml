<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.filterapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FAQ"></activity>
        <activity android:name=".GPS" />
        <activity android:name=".AdminPage" />
        <activity android:name=".CustomerDetail" />
        <activity android:name=".AddAddress" />
        <activity android:name=".CustomerList" />
        <activity android:name=".Abcd" />
        <activity android:name=".AccountDetails" />
        <activity android:name=".AddCustomer" />
        <activity android:name=".MainActivity" />
        <activity android:name=".FilterDetail" />
        <activity android:name=".QRcode" />
        <activity android:name=".FQA" />
        <activity android:name=".TermNCondition" />
        <activity android:name=".ForgetPassword" />
        <activity android:name=".LoginPage" />
        <activity android:name=".SignUp" />

        <service
            android:name=".fcm.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>