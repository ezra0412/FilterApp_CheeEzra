<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerDetail">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/toolBar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:onClick="history"
        app:layout_constraintBottom_toBottomOf="@+id/textView76"
        app:layout_constraintEnd_toEndOf="@+id/toolbar11"
        app:layout_constraintTop_toTopOf="@+id/textView76"
        app:srcCompat="@drawable/ic_history" />

    <TextView
        android:id="@+id/textView76"
        style="@style/top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Detail"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbar11"
        app:layout_constraintTop_toTopOf="@+id/toolbar11" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:onClick="back"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar11"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@color/button_purple"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/bt_update_customerDetail"
                    app:layout_constraintStart_toStartOf="@+id/bt_update_customerDetail"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/textView78"
                                    style="@style/lable"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="Name"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/textView95"
                                    app:layout_constraintTop_toBottomOf="@+id/textView95"
                                    app:layout_constraintVertical_bias="0.0" />

                                <TextView
                                    android:id="@+id/textView90"
                                    style="@style/lable"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="Mobile"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/textView78"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_email_customerDetail"
                                    app:layout_constraintVertical_bias="0.0" />

                                <TextView
                                    android:id="@+id/textView91"
                                    style="@style/lable"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="Email"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/textView90"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_name_customerDetail"
                                    app:layout_constraintVertical_bias="0.0" />

                                <TextView
                                    android:id="@+id/textView92"
                                    style="@style/lable"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="Address :"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/textView90"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_mobile_customerDetail"
                                    app:layout_constraintVertical_bias="0.0" />

                                <TextView
                                    android:id="@+id/textView93"
                                    style="@style/lable"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="Note: "
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/textView90"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_address_customerDetail"
                                    app:layout_constraintVertical_bias="0.0" />

                                <TextView
                                    android:id="@+id/tv_address_customerDetail"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="16dp"
                                    android:fontFamily="@font/archivo_narrow"
                                    android:gravity="center_vertical"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/text_color"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="1.0"
                                    app:layout_constraintStart_toStartOf="@+id/textView90"
                                    app:layout_constraintTop_toBottomOf="@+id/textView92"
                                    app:layout_constraintVertical_bias="0.0" />

                                <TextView
                                    android:id="@+id/tv_note_customerDetail"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_marginBottom="24dp"
                                    android:fontFamily="@font/archivo_narrow"
                                    android:textColor="@color/text_color"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="@+id/textView93"
                                    app:layout_constraintTop_toBottomOf="@+id/textView93"
                                    app:layout_constraintVertical_bias="0.0" />

                                <TextView
                                    android:id="@+id/tv_name_customerDetail"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp"
                                    android:fontFamily="@font/archivo_narrow"
                                    android:textColor="@color/text_color"
                                    android:textSize="16sp"
                                    app:layout_constraintBaseline_toBaselineOf="@+id/textView78"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/tv_email_customerDetail" />

                                <TextView
                                    android:id="@+id/tv_mobile_customerDetail"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:fontFamily="@font/archivo_narrow"
                                    android:onClick="call"
                                    android:textColor="@color/text_color"
                                    android:textSize="16sp"
                                    app:layout_constraintBaseline_toBaselineOf="@+id/textView90"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toEndOf="@+id/textView92" />

                                <TextView
                                    android:id="@+id/tv_email_customerDetail"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp"
                                    android:textColor="@color/text_color"
                                    android:textSize="16sp"
                                    app:layout_constraintBaseline_toBaselineOf="@+id/textView91"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="@+id/tv_mobile_customerDetail" />

                                <ImageView
                                    android:id="@+id/imageView22"
                                    android:layout_width="31dp"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="6dp"
                                    android:onClick="locate"
                                    app:layout_constraintBottom_toBottomOf="@+id/textView169"
                                    app:layout_constraintEnd_toStartOf="@+id/textView169"
                                    app:layout_constraintHorizontal_bias="1.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/textView169"
                                    app:layout_constraintVertical_bias="1.0"
                                    app:srcCompat="@drawable/ic_gps_green" />

                                <TextView
                                    android:id="@+id/textView169"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp"
                                    android:fontFamily="@font/archivo_narrow_bold_italic"
                                    android:onClick="locate"
                                    android:text="Navigate Now"
                                    android:textColor="@color/button_purple"
                                    app:layout_constraintBaseline_toBaselineOf="@+id/textView92"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:id="@+id/textView50"
                                    style="@style/lable"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    app:layout_constraintBaseline_toBaselineOf="@+id/textView91"
                                    app:layout_constraintEnd_toEndOf="@+id/textView172" />

                                <TextView
                                    android:id="@+id/textView172"
                                    style="@style/lable"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    app:layout_constraintBaseline_toBaselineOf="@+id/textView90"
                                    app:layout_constraintEnd_toEndOf="@+id/textView92" />

                                <TextView
                                    android:id="@+id/textView173"
                                    style="@style/lable"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    app:layout_constraintBaseline_toBaselineOf="@+id/textView78"
                                    app:layout_constraintEnd_toEndOf="@+id/textView50" />

                                <TextView
                                    android:id="@+id/textView95"
                                    style="@style/lable"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="16dp"
                                    android:text="Status"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/textView96"
                                    style="@style/lable"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    app:layout_constraintBaseline_toBaselineOf="@+id/textView95"
                                    app:layout_constraintEnd_toEndOf="@+id/textView173" />

                                <TextView
                                    android:id="@+id/tv_status_customerDetails"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/archivo_narrow_bold"
                                    android:textColor="@color/dark_green"
                                    android:textSize="16dp"
                                    app:layout_constraintBaseline_toBaselineOf="@+id/textView95"
                                    app:layout_constraintEnd_toEndOf="@+id/tv_name_customerDetail"
                                    app:layout_constraintStart_toStartOf="@+id/tv_name_customerDetail" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/bt_delete_customerDetail"
                    style="@style/button_long"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/button_long_red"
                    android:onClick="delete"
                    android:text="Delete"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/bt_update_customerDetail"
                    app:layout_constraintStart_toStartOf="@+id/bt_update_customerDetail"
                    app:layout_constraintTop_toBottomOf="@+id/bt_update_customerDetail"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/bt_update_customerDetail"
                    style="@style/button_long"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="64dp"
                    android:onClick="edit"
                    android:text="Update"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView2"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>