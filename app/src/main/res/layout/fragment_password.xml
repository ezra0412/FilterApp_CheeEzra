<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView150"
        style="@style/lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Company Email Password"
        app:layout_constraintStart_toStartOf="@+id/tv_password_changePassword"
        app:layout_constraintTop_toBottomOf="@+id/et_email_changePassword" />

    <TextView
        android:id="@+id/textView148"
        style="@style/lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Company Email"
        app:layout_constraintStart_toStartOf="@+id/et_email_changePassword"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_password_changePassword"
        style="@style/edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:password="false"
        android:text="  ******"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_verification_changePassword"
        app:layout_constraintStart_toStartOf="@+id/tv_verification_changePassword"
        app:layout_constraintTop_toBottomOf="@+id/textView150"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_verification_changePassword"
        style="@style/edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:password="false"
        android:text="  ******"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_admin_changePassword"
        app:layout_constraintStart_toStartOf="@+id/tv_admin_changePassword"
        app:layout_constraintTop_toBottomOf="@+id/textView152"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView152"
        style="@style/lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Identity Verification Password"
        app:layout_constraintStart_toStartOf="@+id/tv_verification_changePassword"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_changePassword" />

    <TextView
        android:id="@+id/textView153"
        style="@style/lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Admin Verification Password"
        app:layout_constraintStart_toStartOf="@+id/tv_admin_changePassword"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_changePassword" />

    <TextView
        android:id="@+id/tv_admin_changePassword"
        style="@style/edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:password="false"
        android:text="  ******"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bt_update_changePassword"
        app:layout_constraintStart_toStartOf="@+id/bt_update_changePassword"
        app:layout_constraintTop_toBottomOf="@+id/textView153"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt_update_changePassword"
        style="@style/button_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Update Details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_admin_changePassword"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_email_changePassword"
        style="@style/edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="  Please Enter Company Email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_password_changePassword"
        app:layout_constraintStart_toStartOf="@+id/tv_password_changePassword"
        app:layout_constraintTop_toBottomOf="@+id/textView148"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>