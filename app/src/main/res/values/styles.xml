<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="edit_text">
        <item name="android:background">@drawable/text_box</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#B8B3B5</item>
        <item name="fontFamily">@font/archivo_narrow</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="button_short">
        <item name="android:background">@drawable/button_short</item>
        <item name="android:fontFamily">@font/archivo_narrow</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lable">
        <item name="android:fontFamily">@font/archivo_narrow</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinner">
        <item name="android:background">@drawable/spinner_close</item>
        <item name="android:popupBackground">@color/light_grey</item>
    </style>

    <style name="button_long">
        <item name="android:background">@drawable/button_long</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_red</item>
    </style>

    <style name="top_bar">
        <item name="android:fontFamily">@font/archivo_narrow</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_dropDown" parent="edit_text">
        <item name="android:background">@drawable/spinner_close</item>
        <item name="android:fontFamily">@font/archivo_narrow</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="android:textColorHint">#B8B3B5</item>

    </style>

    <style name="pop_up_title" parent="lable">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/archivo_narrow</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
