<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/medium_green</item>
        <item name="android:textColorSecondary">@color/medium_green</item>

    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/light_green</item>
    </style>


    <style name="edit_text">
        <item name="android:background">@drawable/text_box</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="fontFamily">@font/archivo_narrow</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="button_short">
        <item name="android:background">@drawable/button_short</item>
        <item name="android:fontFamily">@font/archivo_narrow</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lable">
        <item name="android:fontFamily">@font/archivo_narrow</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_long">
        <item name="android:background">@drawable/button_long</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="top_bar">
        <item name="android:fontFamily">@font/archivo_narrow</item>
        <item name="android:textColor">@color/medium_green</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_dropDown">
        <item name="android:background">@drawable/spinner_close</item>
        <item name="android:fontFamily">@font/archivo_narrow</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="pop_up_title">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/archivo_narrow</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_big">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:fontFamily">@font/archivo_narrow_bold_italic</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="notification_label">
        <item name="android:fontFamily">@font/archivo_narrow_bold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="notification_description">
        <item name="android:fontFamily">@font/archivo_narrow</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
